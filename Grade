#include <iostream>
using namespace std;

int main ()

{

    int percent;

    cout << "What is your current percentage in class? ";
    cin >> percent;

    if (percent >= 90 && percent <= 100)
    {
        cout << "Your current grade is an A";
    }
    else if (percent >= 80 && percent <= 89)
        cout << "Your current grade is a B";

    else if (percent >= 70 && percent <= 79)
        cout << "Your current grade is a C";

    else if (percent >= 60 && percent <= 69)
        cout << "Your current grade is a D";

    else if (percent <= 59 && percent >= 0)
        cout << "Your current grade is a F";

    else
        cout << "Error incorrect value entered for percentage.\n";


    return 0;




}
